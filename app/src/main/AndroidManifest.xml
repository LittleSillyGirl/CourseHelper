<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bs.coursehelper">

    <application
        android:name="com.bs.coursehelper.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.bs.coursehelper.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.bs.coursehelper.activity.MainActivity"
            android:launchMode="singleTask"
            />
        <activity android:name="com.bs.coursehelper.activity.WelcomActivity" />
        <activity android:name="com.bs.coursehelper.activity.LoginActivity" />
        <activity android:name="com.bs.coursehelper.activity.RegisterActivity"></activity>
    </application>

</manifest>